---
// src/layouts/BaseLayout.astro - Final Version with Theme Base Colors
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@/styles/tailwind.css'; // Using alias path - change to '../styles/tailwind.css' if preferred
import { analyticsConfig } from '../data/analytics';
import { generateWebsiteSchema } from '../utils/structuredData';

export interface Props {
  title: string;
  description?: string;
  lang?: string;
  dir?: 'ltr' | 'rtl';
}

const { title, description, lang = 'en', dir = 'ltr' } = Astro.props;

// Construct page title format
const siteName = "Abdla"; // Brand name
const fullPageTitle = `${title} | ${siteName}`;

// SEO Configuration
const siteDescription = description || "Technology Consultant and Runner sharing insights on tech, productivity, and personal growth.";
const siteUrl = "https://abdla.box";
const currentUrl = `${siteUrl}${Astro.url.pathname}`;
const imageUrl = `${siteUrl}/favicon.svg`; // You can update this to a proper OG image later

// Generate structured data
const websiteSchema = generateWebsiteSchema();
---
<html lang={lang} dir={dir} class="font-sans antialiased">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Favicons -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />

  <!-- Apple Touch Icons -->
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png" />
  <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon-144x144.png" />
  <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png" />
  <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png" />
  <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png" />
  <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png" />
  <link rel="apple-touch-icon" sizes="60x60" href="/apple-touch-icon-60x60.png" />
  <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png" />

  <!-- Web App Manifest -->
  <link rel="manifest" href="/site.webmanifest" />

  <!-- Primary Meta Tags -->
  <title>{fullPageTitle}</title>
  <meta name="title" content={fullPageTitle} />
  <meta name="description" content={siteDescription} />
  <meta name="author" content="Abdla" />
  <meta name="robots" content="index, follow" />

  <!-- Canonical URL -->
  <link rel="canonical" href={currentUrl} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={currentUrl} />
  <meta property="og:title" content={fullPageTitle} />
  <meta property="og:description" content={siteDescription} />
  <meta property="og:image" content={imageUrl} />
  <meta property="og:site_name" content={siteName} />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={currentUrl} />
  <meta property="twitter:title" content={fullPageTitle} />
  <meta property="twitter:description" content={siteDescription} />
  <meta property="twitter:image" content={imageUrl} />

  <!-- Additional SEO -->
  <meta name="theme-color" content="#007BC5" />
  <meta name="msapplication-TileColor" content="#007BC5" />

  <!-- Language and Direction -->
  <link rel="alternate" hreflang="en" href={`${siteUrl}/en`} />
  <link rel="alternate" hreflang="ar" href={`${siteUrl}/ar`} />
  <link rel="alternate" hreflang="x-default" href={siteUrl} />

  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title={`${siteName} Blog`} href={`${siteUrl}/rss.xml`} />

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)}></script>

  {/* Google Analytics */}
  <script async src={`https://www.googletagmanager.com/gtag/js?id=${analyticsConfig.googleAnalytics.id}`}></script>
  <script define:vars={{ analyticsConfig }}>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', analyticsConfig.googleAnalytics.id);
  </script>

  {/* Google Font Links */}
  {/* Microsoft Clarity */}
  <script type="text/javascript" define:vars={{ clarityId: analyticsConfig.clarity.projectId }}>
    (function(c,l,a,r,i,t,y){
      c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
      t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
      y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", clarityId);
  </script>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  <!-- Google Fonts: English and Arabic fonts with matching design philosophy -->
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;600;700&family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600&family=Outfit:wght@400;500;600;700;800&family=Comfortaa:wght@600;700&family=Quicksand:wght@600;700&family=Kalam:wght@700&family=Caveat:wght@700&family=Paytone+One&family=Fredoka:wght@600;700&family=Unbounded:wght@500;600;700&family=IBM+Plex+Sans+Arabic:wght@400;600;700&family=Readex+Pro:wght@400;600;700&family=Noto+Sans+Arabic:wght@400;600;700&family=Rubik:wght@400;600;700&family=Vazirmatn:wght@400;600;700&display=swap" rel="stylesheet">
  
  <!-- Local fonts CSS -->
  <link href="/fonts/fonts.css" rel="stylesheet">
</head>
<!-- {/* UPDATED: Apply Near White background and Near Black text */} -->
<body class="min-h-screen flex flex-col">
    <Header />
    {/* Add some vertical padding to the main content area */}
    <main class="flex-grow py-8 md:py-12">
      <slot /> {/* Page content will be injected here */}
    </main>
    <Footer />
</body>
</html>