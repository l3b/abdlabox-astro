
---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';

import { tags, normalizeTag } from '../../../data/tags';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return data.language === 'ar' && !data.isDraft;
  });

  // Get all tag configurations
  const tagConfigs = Object.values(tags);
  
  return tagConfigs.map(tagConfig => ({
    params: { tag: tagConfig.slug.ar },
    props: { 
      posts: posts.filter(post => 
        post.data.tags?.some(t => {
          const tagEntry = Object.values(tags).find(
            entry => entry[post.data.language] === t
          );
          return tagEntry?.slug.ar === tagConfig.slug.ar;
        })
      ),
      tagConfig
    }
  }));
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout title={`المواضيع في "${tag}"`} description={`جميع المواضيع في ${tag}`} lang="ar" dir="rtl">
  <div class="container mx-auto px-4 py-8 md:px-6 md:py-12">
    <h1 class="text-4xl md:text-5xl font-bold mb-2 text-soft-charcoal">
      {Object.values(tags).find(t => t.slug.ar === tag)?.ar || tag}
    </h1>
    <div class="w-24 h-1 bg-neon-yellow mb-8"></div>
    <p class="text-lg text-gray-600 mb-8">
      تصفح جميع المقالات تحت تصنيف {tag}
    </p>
    
    <div class="space-y-8 md:space-y-10">
      {posts.map(post => (
        <article class="block p-6 bg-white border border-gray-200 rounded-lg hover:shadow-xl transition duration-300 ease-in-out border-t-4 border-t-neon-yellow">
          <a href={`/ar/blog/${post.slug.replace(/^ar\//, '')}`} class="block mb-2 no-underline">
            <h2 class="text-xl md:text-2xl font-semibold text-electric-blue hover:text-teal-600 hover:underline transition-colors duration-200">
              {post.data.title}
            </h2>
          </a>

          <div class="text-sm text-gray-600 mb-3">
            <span>
              نُشر في: {post.data.pubDate.toLocaleDateString('ar-SA', { year: 'numeric', month: 'long', day: 'numeric' })}
            </span>
          </div>

          {post.data.description && (
            <p class="text-gray-700 leading-relaxed mt-2">
              {post.data.description}
            </p>
          )}
        </article>
      ))}
    </div>
  </div>
</BaseLayout>
