
---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const englishPosts = posts.filter(post => post.data.language === 'en');
const arabicPosts = posts.filter(post => post.data.language === 'ar');
---

<BaseLayout title="Blog Admin" description="Manage blog posts">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-3xl font-bold mb-8">Blog Administration</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Create New Post -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Create New Post</h2>
        <div class="space-y-4">
          <a href="/admin/new-post?lang=en" 
             class="block w-full bg-electric-blue text-white py-3 px-4 rounded-lg text-center hover:bg-blue-600 transition-colors">
            New English Post
          </a>
          <a href="/admin/new-post?lang=ar" 
             class="block w-full bg-teal text-white py-3 px-4 rounded-lg text-center hover:bg-teal-600 transition-colors">
            New Arabic Post
          </a>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Blog Stats</h2>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span>English Posts:</span>
            <span class="font-semibold">{englishPosts.length}</span>
          </div>
          <div class="flex justify-between">
            <span>Arabic Posts:</span>
            <span class="font-semibold">{arabicPosts.length}</span>
          </div>
          <div class="flex justify-between">
            <span>Total Posts:</span>
            <span class="font-semibold">{posts.length}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Posts -->
    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-6">Recent Posts</h2>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Title
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Language
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                  Status
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-gray-600">
              {posts.slice(0, 10).map((post) => (
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900 dark:text-white">
                      {post.data.title}
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                      post.data.language === 'en' 
                        ? 'bg-electric-blue text-white' 
                        : 'bg-teal text-white'
                    }`}>
                      {post.data.language === 'en' ? 'English' : 'العربية'}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
                    {post.data.pubDate.toLocaleDateString()}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                      post.data.isDraft 
                        ? 'bg-neon-yellow text-black' 
                        : 'bg-green-100 text-green-800'
                    }`}>
                      {post.data.isDraft ? 'Draft' : 'Published'}
                    </span>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
